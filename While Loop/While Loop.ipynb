   "source": [
    "Given a number x, the task is to print the numbers from x to 0 in decreasing order in a single line."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 1,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Number Entered = 5\n",
      "5 4 3 2 1 0 "
     ]
    }
   ],
   "source": [
    "def reverse():\n",
    "    x = int(input(\"Enter a Number: \"))\n",
    "\n",
    "    print(\"Number Entered =\", x)\n",
    "\n",
    "    while x >= 0:\n",
    "        print(x, end = \" \")\n",
    "        x -= 1\n",
    "\n",
    "reverse()"
   ]
